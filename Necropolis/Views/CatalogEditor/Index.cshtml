@using Necropolis.Models
@model IEnumerable<Necropolis.Models.CatalogItemModel>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}





<div class="container">
	<div class="row">
		<div class="span12">
			<div class="wrap">
				<h2 class="lines">Редактор каталога</h2>
			</div>
			<table class="table">
				<tr>
					<th class="span3">
						@Html.DisplayNameFor(model => model.Type)
					</th>
					<th class="span3">
						@Html.DisplayNameFor(model => model.Image)
					</th>
					<th class="span3">
						@Html.DisplayNameFor(model => model.Price)
					</th>
					<th>
						@Html.ActionLink("Добавить", "Create")
					</th>
				</tr>

				@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Type)


					</td>
					<td>
						<div class="thumbnails collection span2">

							<div class="thumbnail" style="height: 150px; background-image: url(@Html.DisplayFor( modelItem => item.ImagePreview )); background-size: cover; background-repeat: no-repeat;">
								<a href="@Html.DisplayFor( modelItem => item.Image )" class="magnifier">
								</a>
								<span><a href="#">@Html.DisplayFor(modelItem => item.Price) руб</a></span>
							</div>						</div>

					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Price)
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

						@Html.ActionLink("Delete", "Delete", new { id = item.Id })
					</td>
				</tr>
			}

			</table>

		</div>
	</div>
</div>

