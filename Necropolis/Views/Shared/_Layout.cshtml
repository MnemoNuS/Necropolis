    <title>Некрополь - @ViewBag.Title - похоронные и ритуальные услуги в Ярославле</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <header class="colomns-top">
        <div class="container">
            <div class="row">

                <div class="span12">
                    <h1 class="brand">
                        <a href="@Url.Action("Index", "Home")"><img class="logo" src="../../Content/images/logo.png" /></a>
                    </h1>
                    <div class="navbar_" id="menu-frame">
                        <div class="navbar-inner">
                            <ul class="nav sf-menu " id="menu">
                                <li class="active">@Html.ActionLink("Главная", "Index", "Home")</li>
                                <li>
                                    <a href="@Url.Action("Index", "RitualServices")">
                                        Услуги
                                    </a>
                                    <ul class="sub-menu">
                                        <li>
                                            Похороны
                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="@Url.Action("Basic", "RitualServices")">Базовый</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("Extended", "RitualServices")">Расширенный</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("Premium", "RitualServices")">Премиум</a>
                                                </li>
                                            </ul>

                                        </li>
                                    </ul>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "Catalog")">
                                        Каталог
                                    </a>
                                    <ul class="sub-menu">
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="кресты"})">Кресты</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="памятники"})">Памятники</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="траурные_ленты"})">Траурные ленты</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="венки"})">Венки</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="гробы"})">Гробы</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="другие_товары"})">Другие товары</a></li>
                                    </ul>
                                </li>
                                <li>@Html.ActionLink("Информация", "Contact", "Home")</li>
                                <li>@Html.ActionLink("Контакты", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="span12 ">
                    <section class="social-block call">
                        <img src="~/Content/images/phone-icon.png" alt="">
                        <div class="phone">
                            <span class="social-title"><strong>Позвоните нам </strong></span><br />
                            <a class="social-title" href="tel:+4852733998">
                                <span>(4852) 733-998 (круглосуточно)</span>
                            </a>
                            <br />
                            <a class="social-title" href="tel:+4852942948">
                                <span>(4852) 942-948</span>
                            </a>
                            <br />
                            <span>Часы работы: круглосуточно</span>

                        </div>

                    </section>
                </div>
            </div>
        </div>
    </header>
    <div class="body-content colomns-middle">
        <div class="container">
            @RenderBody()
        </div>
    </div>
    <footer class="colomns-bottom">
        <div class="container">
            <div class="row">

                <div class="span12 ">
                    <section class="social-block">
                        <img src="~/Content/images/phone-icon.png" alt="">
                        <div class="phone">
                            <span class="social-title"><strong>Позвоните нам </strong></span><br />
                            <a class="social-title" href="tel:+4852733998">
                                <span>(4852) 733-998 (круглосуточно)</span>
                            </a>
                            <br />
                            <a class="social-title" href="tel:+4852942948">
                                <span>(4852) 942-948</span>
                            </a>
                            <br />
                            <span>Часы работы: круглосуточно</span>

                        </div>

                    </section>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    NECROPOLIS &copy; @DateTime.Now.Year &nbsp; | Городской Ритуальный Центр | Полный комплекс ритуальных услуг в Ярославле
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
