@using Necropolis.Helpers
@{
    var description = ViewBag.Description != null ? ViewBag.Description : "Похоронные и ритуальные услуги в ярославле";
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta charset="utf-8">
    <link rel="icon" href="~/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    <meta name="description" content="@description">
    <meta name="author" content="MnemoN">
    @RenderSection("css", required: false)
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-97098014-1', 'auto');
        ga('send', 'pageview');

    </script>
    <!--[if (gt IE 9)|!(IE)]><!-->
    <script src="~/Scripts/jquery.mobile.customized.min.js"></script>
    <!--<![endif]-->
    <!--[if lt IE 8]>
        <div style='text-align:center'><a href="http://www.microsoft.com/windows/internet-explorer/default.aspx?ocid=ie6_countdown_bannercode"><img src="http://www.theie6countdown.com/img/upgrade.jpg" border="0"alt=""/></a></div>
    <![endif]-->
    <!--[if lt IE 9]>
      <link rel="stylesheet" href="~/Content/ie.css" type="text/css" media="screen">
      <script src="~/Scripts/html5shiv.js"></script>
    <![endif]-->
    <title>Похоронные и ритуальные услуги в Ярославле - Некрополь - @ViewBag.Title</title>
</head>
<body>
    <header class="colomns-top">
        <div class="container">
            <div class="row">

                <div class="span12">
                    <div class="brand" id="brand">
                        <a href="@Url.Action("Index", "Home")"><img class="logo" src="../../Content/images/logo.png" /></a>
                    </div>
                    <div class="navbar_" id="menu-frame">
                        <div class="navbar-inner">
                            <ul class="nav sf-menu " id="menu" active-tab="@ViewBag.MenuTab">
                                <li id="home">@Html.ActionLink("Главная", "Index", "Home")</li>
                                <li id="services">
                                    <a href="#">Услуги</a>
                                    <ul class="sub-menu">
                                        <li>
                                            <a href="@Url.Action("RitualServices", "Services")">Ритуальные услуги</a>
                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="@Url.Action("RitualServices", "Services", new {set = "muslim"})">Мусульманские похороны</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("RitualServices", "Services", new {set = "embalming" })">Бальзамирование</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("RitualServices", "Services", new {set = "cremation"})">Кремация</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("RitualServices", "Services", new {set = "transport"})">Транспортировка</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("RitualServices", "Services", new {set = "care"})">Уход за захоранениями</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("RitualServices", "Services", new {set = "contract"})">Прижизненный договор</a>
                                                </li>
                                            </ul>

                                        </li>
                                        <li><a href="@Url.Action("RitualHalls", "Services")">Ритуальные залы</a></li>
                                        <li>
                                            <a href="@Url.Action("FuneralSets", "Services")">Комплексы похоронных услуг</a>
                                            <ul class="sub-menu">
                                                <li>
                                                    <a href="@Url.Action("FuneralSets", "Services", new {set = "basic"})">Базовый</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("FuneralSets", "Services", new {set = "extended"})">Расширенный</a>
                                                </li>
                                                <li>
                                                    <a href="@Url.Action("FuneralSets", "Services", new {set = "premium"})">Премиум</a>
                                                </li>
                                            </ul>
                                        </li>
                                    </ul>
                                </li>
                                <li id="catalog">
                                    <a href="@Url.Action("Index", "Catalog")">
                                        Каталог
                                    </a>
                                    <ul class="sub-menu">
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="кресты"})">Кресты</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="памятники"})">Памятники</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="траурные_ленты"})">Траурные ленты</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="венки"})">Венки</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="гробы"})">Гробы</a></li>
                                        <li><a href="@Url.Action("index", "Catalog", new {@type="другие_товары"})">Другие товары</a></li>
                                    </ul>
                                </li>
                                <li id="information">
                                    <a href="@Url.Action("Information", "Information")">
                                        Информация
                                    </a>
                                    @{
                                        var informationArticles = InformationManager.GetMenuMembers();
                                        if (informationArticles != null && informationArticles.Count > 0)
                                        {
                                        <ul class="sub-menu">
                                            @foreach (var informationItemModel in informationArticles)
                                            {
                                            <li>
                                                <a href="@Url.Action("Information", "Information",
                                                                     new {set = informationItemModel.RouteName})">
                                                    @informationItemModel.Title
                                                </a>

                                            </li>
                                            }
                                        </ul>

                                        }
                                    }

                                </li>
                                <li id="contacts">@Html.ActionLink("Контакты", "Contact", "Home")</li>
                                @if (Request.Cookies.Get("Necropolis") != null)
                                {
                                <li id="control">
                                    <a href="@Url.Action("Index", "Control")">
                                        Управление
                                    </a>
                                    <ul class="sub-menu">
                                        <li>
                                            <a href="@Url.Action("Index", "CatalogEditor")">
                                                Редактор каталога
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("Index", "InformationEditor")">
                                                Редактор статей
                                            </a>
                                        </li>
                                        <li>
                                            <a href="@Url.Action("LogOut", "Auth")">
                                                Выход
                                            </a>
                                        </li>
                                    </ul>

                                </li>
                                }
                            </ul>
                        </div>
                    </div>

                </div>
                <div class="span12 ">
                    <section class="social-block call" itemscope itemtype="http://schema.org/Organization">
                        <meta itemprop="name" content="Похоронный дом Некрополь">
                        <meta itemprop="address" content="г. Ярославль ул. Загородный сад, д. 11 (территория б-цы им. Соловьёва) Въезд с ул. Харитонова">
                        <img src="~/Content/images/phone-icon.png" alt="">
                        <div class="phone">
                            <span class="social-title"><strong>Позвоните нам </strong></span><br />
                            <a class="social-title" href="tel:+4852733998">
                                <span><span itemprop="telephone">(4852) 733-998</span> (круглосуточно)</span>
                            </a>
                            <br />
                            <a class="social-title" href="tel:+4852942948">
                                <span itemprop="telephone">(4852) 942-948</span>
                            </a>
                            <br />
                            <span>Часы работы: круглосуточно</span>

                        </div>

                    </section>
                </div>
            </div>
        </div>
    </header>
    <div class="body-content colomns-middle">
        <div class="container">
            @RenderBody()
            <div id="goUp" class="go-up">
                <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
            </div>
        </div>
    </div>
    <footer class="colomns-bottom">
        <div class="container">
            <div class="row">

                <div class="span12 ">
                    <section class="social-block">
                        <img src="~/Content/images/phone-icon.png" alt="">
                        <div class="phone">
                            <span class="social-title"><strong>Позвоните нам </strong></span><br />
                            <a class="social-title" href="tel:+4852733998">
                                <span>(4852) 733-998 (круглосуточно)</span>
                            </a>
                            <br />
                            <a class="social-title" href="tel:+4852942948">
                                <span>(4852) 942-948</span>
                            </a>
                            <br />
                            <span>Часы работы: круглосуточно</span>

                        </div>

                    </section>
                </div>
            </div>
            <div class="row">
                <div class="span12">
                    NECROPOLIS &copy; @DateTime.Now.Year &nbsp; | Некрополь - Похоронный дом  | Полный комплекс ритуальных услуг в Ярославле
                </div>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
